@ "common/string.hdr"

enum TokenKind
{
    BAD_TOKEN,
    EOI,
    DECIMAL_LITERAL,
    IDENTIFIER,
    PLUS,
    MINUS,
    ASTERISK,
    SLASH,
    LPAREN,
    RPAREN,
};

type TokenVal: string;

struct Token
{
    kind:   TokenKind;
    pos:    struct Pos {
                row, col: unsigned;
            };
    val:    TokenVal;
};

extern token: Token;

extern fn getToken(): TokenKind;

extern fn tokenKindStr(token: TokenKind): -> char;
